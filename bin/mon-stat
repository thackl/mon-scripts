#!/bin/bash

Bin="$(dirname "$(readlink -f "$0")")"
MODE="";
EXEC="eval";

show_usage(){
    # usage
    
    echo "Usage: mon-stat --mode MODE [--exec EXEC] -- [PASS-THROUGH]" 1>&2;
    echo "# local, top" 1>&2;
    echo "  mon-stat --mode top-short" 1>&2;
    echo "# remote, queue" 1>&2;
    echo "  mon-stat --exec \"ssh 89\" --mode squeue-short" 1>&2;
    echo "# remote, queue with pass-through params" 1>&2;
    echo "  mon-stat --exec \"ssh lrz\" --mode squeue-long -- --clusters serial --partition serial_long" 1>&2;
    exit;
}


if [[ $# -lt 1 ]]; then
    show_usage;
fi;

# Execute getopt
ARGS=`getopt --name "$SCRIPT" \
    --options "e:m:h" \
    --longoptions "exec:,mode:,help" \
    -- "$@"`

#Bad arguments
[ $? -ne 0 ] && exit 1;

# A little magic
eval set -- "$ARGS"

# Now go through all the options
while true; do
    case "$1" in
        -e|--exec)
            [ ! -n "$2" ] && (echo "$1: value required" 1>&2 && exit 1);
            EXEC=$2;
            shift 2;;
        -m|--mode)
            [ ! -n "$2" ] && (echo "$1: value required" 1>&2 && exit 1);
            MODE=$2;
            shift 2;;
        -h|--help)
            show_usage && exit 0;;
        --)
            shift
            break;;
        *)
            echo "$1: Unknown option" 1>&2 && exit 1;;
  esac
done

case "$MODE" in
    squeue-short)
        CMD='squeue '$@' -o "%.15j %.8u %.2t %.4C %R"';
        POOL="$Bin"'/pool_rows.pl -i --columns 0,1,2 --sort 2,1,4' ;;
    squeue-long)
        CMD='squeue '$@' -o "%.7i %.9P %.15j %.8u %.2t %.12M %.6D %.4C %R"';
        POOL="$Bin"'/pool_rows.pl -i --columns 1,2,3,4,6,7,8 --sort 4,8,3';;
    top-short)
        CMD='top -n1 -b | sed -n "7,100{s/^ \+//;s/ \+/\t/g;p}" | cut -f2,8,9,10,12 | grep -vw root | grep -vw top';
        POOL="$Bin"'/pool_rows.pl -i --columns 0,1,4 --sort 1,0,2,4';;
    *)
        echo "unknown mode: $MODE" 1>&2;

        exit 1;;
esac;

echo $CMD 1>&2;
$EXEC $CMD | grep -v "^CLUSTER:" | $POOL;
